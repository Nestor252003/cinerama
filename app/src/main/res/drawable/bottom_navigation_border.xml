<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the BottomNavigationView -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!-- Top border -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="2dp" /> <!-- Border thickness -->
            <solid android:color="@color/white" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>
