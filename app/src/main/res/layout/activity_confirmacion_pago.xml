<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".desing.peliculas.activities.ConfirmacionPagoActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/colorFondo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="413dp"
            android:layout_marginBottom="170dp"
            android:background="@color/colorFondo2"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="278dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="2dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_qr" />

            <TextView
                android:id="@+id/txt_codReserva"
                android:layout_width="306dp"
                android:layout_height="66dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>


        <!-- Contenedor para los fragmentos -->
        <Button
            android:id="@+id/btn_historial"
            android:layout_width="381dp"
            android:layout_height="64dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="2dp"
            android:background="@color/colorText"
            android:text="Cerrar"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

</ScrollView>