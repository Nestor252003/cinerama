<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Image Section -->
    <ImageView
        android:id="@+id/img_Combo"
        android:layout_width="196dp"
        android:layout_height="206dp"
        android:layout_gravity="left"
        android:scaleType="centerInside"
        android:src="@drawable/ic_imagen_combo" />

    <!-- Title Section -->
    <TextView
        android:id="@+id/combo_title"
        android:layout_width="196dp"
        android:layout_height="40dp"

        android:text="COMBO DOS SALADO + 2MM OL"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Description Section -->
    <TextView
        android:id="@+id/combo_description"
        android:layout_width="197dp"
        android:layout_height="60dp"
        android:text="1 Canchitaitos"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Price and Quantity Control Section -->
    <LinearLayout
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Decrease Button -->
        <ImageButton
            android:id="@+id/btn_decrease"
            android:layout_width="36dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_minimize" />

        <!-- Quantity Text -->
        <TextView
            android:id="@+id/quantity"
            android:layout_width="21dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Increase Button -->
        <ImageButton
            android:id="@+id/btn_increase"
            android:layout_width="34dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_plus" />

        <!-- Spacer -->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Price Text -->
        <TextView
            android:id="@+id/txt_cost"
            android:layout_width="89dp"
            android:layout_height="56dp"
            android:text="S/47.00"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
